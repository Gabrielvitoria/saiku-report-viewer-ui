/*! =========================================================================
   TOPBAR
   ========================================================================= */

.topbar
  position fixed
  z-index 999
  top 0
  right 0
  left 0

.topbar .topbar-menu
  position relative
  z-index 1
  float left
  width 50px
  background $black

.topbar-menu .btn-menu-apps
  display block
  overflow visible
  box-sizing border-box
  min-width 50px
  height 50px
  margin 0
  padding 0
  font-size 20px
  font-weight 700
  line-height 50px
  color $white
  border-width 0
  outline-offset -1px
  cursor pointer
  text-align center
  vertical-align middle

.topbar .topbar-title
  position relative
  z-index 1
  float left
  width 240px

.topbar-title .app-title
  font-size 20px
  font-weight 700
  line-height 50px
  color $white !important
  letter-spacing 0.05em
  text-transform uppercase

.topbar .navbar-default
  height 50px
  margin-bottom 0
  border none
  border-radius 0
  background $saiku
